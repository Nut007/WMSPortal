<div id="user-form" class="row padding-left-10 padding-right-0" style="width: 450px;">
    <div class="form-horizontal col-md-9">
        <div class="form-group">
            <label class="col-md-4 control-label text-left">@Html.LabelFor(model => model.UserName)</label>
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.UserName, new { @class = "k-textbox" })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label text-left">@Html.LabelFor(model => model.Email)</label>
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.Email, new { @class = "k-textbox" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label text-left">@Html.LabelFor(model => model.Password)</label>
            <div class="col-md-5">
                @Html.PasswordFor(model => model.Password, new { @class = "k-textbox" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label text-left">@Html.LabelFor(model => model.PasswordConfirmed)</label>
            <div class="col-md-5">
                @Html.PasswordFor(model => model.PasswordConfirmed, new { @class = "k-textbox" })
            </div>
        </div>

    </div>
